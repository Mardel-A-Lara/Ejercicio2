<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <StackLayout>
        <Label Text="Nombre"/>
        <Entry x:Name="nombre" Placeholder="" Keyboard="Text" BackgroundColor="#1da0e2"/>
        <Label Text="Apellido"/>
        <Entry x:Name="apellido" Placeholder="" Keyboard="Text" BackgroundColor="#1da0e2"/>
        <Label Text="Edad"/>
        <Entry x:Name="edad" Placeholder="" Keyboard="Text" BackgroundColor="#1da0e2"/>
        <Label Text="Correo Eletronico"/>
        <Entry x:Name="correo" Placeholder="" Keyboard="Text" BackgroundColor="#1da0e2"/>

        <Button x:Name="btnsalvar" Text="Salvar Informacion" Clicked="btnsalvar_Clicked" BackgroundColor="Yellow"/>
    </StackLayout>

</ContentPage>
